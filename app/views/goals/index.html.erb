<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Level</th>
    <th>Icon</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.title %></td>
        <td><%= goal.description %></td>
        <td><%= goal.level %></td>
        <td><%= goal.icon %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
